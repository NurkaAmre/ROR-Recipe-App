<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>

<div id="recipes">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <p>
      <%= link_to "Show this recipe", recipe , class: "btn btn-warning mt-10 mb-10 text-decoration-none"%>
    </p>
  <% end %>
</div>

<%= link_to "New recipe", new_recipe_path, class: "btn btn-warning mt-10 mb-10 text-decoration-none" %>
