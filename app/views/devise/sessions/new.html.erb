<h2>Welcom to Recipe App</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3">
    <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Email", autocomplete: "email" %>
  </div>

  <div class="field mb-3">
    <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-dark mt-10 mb-10" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
